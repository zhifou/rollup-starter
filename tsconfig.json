{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "allowJs": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
          "@/*": [
              "src/*"
          ]
      },
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": false,
      "strictNullChecks": true
  },
  "include": [
      "src", "types.d.ts"
  ],
  "exclude": [
      "node_modules",
      "lib",
      "es",
      "dist",
  ]
}